<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corner"
    android:backgroundTint="@color/white"
    android:padding="12dp"
    android:layout_marginVertical="8dp"
    android:layout_below="@+id/header_bar_layout">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_text_view"
        android:text="Title"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginVertical="4dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/content_text_view"
        android:text="Note content example could be long showing this for layout purposes, and testing the ellipsize wow you can fit a lot of text in two lines"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="17sp"
        android:layout_marginVertical="4dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/timestamp_text_view"
        android:text="Timestamp"
        android:textSize="12sp"
        android:layout_marginVertical="4dp"
        android:gravity="right"
        />

</LinearLayout>